#include(stdio.h);
main()
{
  //1. Display the menu
         printf("pick an item : \n.1 Pizza\n.2 Burger\n.3 Nuggets\n.4 Shawarma\n.5 Chicken bugget");
  //2. Read their choice
         int choice=0;
         scanf("%d",&choice);
  //3. Display based on their choice
       
       switch(choice)
       {
         case 1:
             printf("You picked Pizza");
             break;
         case 2:
             printf("You picked Burger");
             break;
         case 3:
             printf("You picked Nuggets");
             break;
         case 4:
             printf("You picked Shawarma");
             break;
         case 5:
             printf("You picked Chicken bugget");
             break;
         default : printf("Invalid choice");
       }
}
